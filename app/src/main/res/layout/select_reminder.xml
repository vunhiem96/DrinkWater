<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0000FFFF">
<androidx.cardview.widget.CardView
    android:layout_marginHorizontal="25dp"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/rl_reminderoff"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/img"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/reminderoff"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Reminder off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ToggleButton
                android:clickable="false"
                android:id="@+id/tgbtn_reminderoff"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/togglebutton_gender"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#F6F8FF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_reminder_vibrate"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/img1"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/reminderring"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/img1"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Vibrate only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ToggleButton
                android:clickable="false"
                android:id="@+id/tgbtn_reminder_vibrate"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/togglebutton_gender"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#F6F8FF" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_reminder_ring"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/img2"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/reminderv"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/img2"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Ringtine with vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ToggleButton
                android:clickable="false"
                android:checked="true"
                android:id="@+id/tgbtn_reminderring"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/togglebutton_gender"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#F6F8FF" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_accept"
            android:layout_marginBottom="15dp"
            android:textColor="#FFF"
            android:background="@drawable/round_bg_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Accept"
            android:layout_width="170dp"
            android:layout_height="35dp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>