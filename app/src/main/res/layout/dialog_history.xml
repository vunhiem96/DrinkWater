<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000FFFF"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="15dp"
        tools:targetApi="o">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:text="@string/rewrite_water_intake"
                android:textColor="#2329D6"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_water_popup" />

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                tools:targetApi="o">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/radiogroup100history"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/rdb_100"
                    android:layout_weight="1"
                    android:button="@null"
                    />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rdb_200"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/radiogroup200history"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:button="@null" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rdb_300"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/radiogroup300history"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:button="@null" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rdb_400"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/radiogroup400history"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:button="@null" />
            </RadioGroup>

            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#F6F8FF" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_cancle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cancle"
                    android:textColor="#FF5668"
                    android:textSize="16sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#F6F8FF" />

                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="#405ED5"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>