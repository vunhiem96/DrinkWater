<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2B46C9"
    android:orientation="vertical"
    tools:context=".fragment.WeightFragment"
    android:weightSum="10">

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2B46C9">
<ImageView
    android:id="@+id/back"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="20dp"
    android:src="@drawable/arrowleft"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Weight"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_setheight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/note" />
    </RelativeLayout>

    <CalendarView
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/round_bg_weight"
        android:layout_marginTop="15dp"
        android:layout_weight="5"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="#FF5668"
        app:mcv_arrowColor="#FFF"
        app:mcv_tileSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:background="@drawable/img_weightfragment"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:visibility="invisible"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="#2329D6"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kg" />

        <com.shawnlin.numberpicker.NumberPicker

            android:id="@+id/number_picker_weighr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="#ADAAAA"
            app:np_max="150"
            app:np_min="15"
            app:np_selectedTextColor="#2329D6"
            app:np_selectedTextSize="20sp"
            app:np_textColor="#707070"
            app:np_textSize="18sp"
            app:np_value="80" />
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <com.shawnlin.numberpicker.NumberPicker

            android:id="@+id/number_picker2_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="#ADAAAA"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="#2329D6"
            app:np_selectedTextSize="20sp"
            app:np_textColor="#707070"
            app:np_textSize="18sp"
            app:np_value="0" />
        <TextView
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="#2329D6"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kg" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:background="#FFF"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
<Button
    android:layout_marginTop="20dp"
    android:id="@+id/btn_save"
    android:text="Save"
    android:background="@drawable/round_bg_button"
    android:layout_width="200dp"
    android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>