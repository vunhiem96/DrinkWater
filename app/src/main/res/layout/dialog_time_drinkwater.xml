<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0000FFFF">
<androidx.cardview.widget.CardView
    android:layout_marginHorizontal="25dp"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="15dp"
                android:layout_marginTop="7dp"
                android:layout_toStartOf="@id/img_remove_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_dialog"
                android:layout_toLeftOf="@id/img_remove_dialog"
                android:layout_marginRight="10dp" />
            <ImageView
                android:id="@+id/img_remove_dialog"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/remove"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp" />
        </RelativeLayout>
        <ImageView
            android:src="@drawable/img_water_dialog"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#252450"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to drink water"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#252450"
            android:textSize="12sp"
            android:layout_marginHorizontal="50dp"
          android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="Consistently drinking water calms your nerves and organizes your thoughts!"/>
        <Button
            android:id="@+id/btn_accept"
            android:layout_marginBottom="15dp"
            android:textColor="#FFF"
            android:background="@drawable/round_bg_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Accept"
            android:layout_width="170dp"
            android:layout_height="35dp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>