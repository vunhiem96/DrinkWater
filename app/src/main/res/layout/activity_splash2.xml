<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.splash.SplashActivity2"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#405ED5">
<RelativeLayout
    android:layout_weight="6"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
    <RelativeLayout
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
<TextView
   android:id="@+id/tv1"
    android:gravity="center_horizontal"
    android:layout_marginHorizontal="40dp"
    android:layout_centerInParent="true"
    android:textColor="#FFF"
    android:textSize="16sp"
    android:text="Water helps your body remove waste,"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_below="@id/tv1"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:text="aids indigestion, prevents you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
          android:layout_below="@id/tv2"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:text="from becoming dehydrated."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
<Button
    android:layout_marginTop="10dp"
    android:id="@+id/btn_splash2"
    android:background="@drawable/round_bg_button_splash"
    android:textColor="#FFF"
    android:text="LET'S GO"
    android:layout_centerHorizontal="true"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="@dimen/_40sdp"/>
    </RelativeLayout>
</LinearLayout>