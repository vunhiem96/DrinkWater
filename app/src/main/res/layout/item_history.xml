<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_bg_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_records_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="20dp"
            android:text="09:00"
            android:textColor="#252450"
            android:textSize="16sp" />
<FrameLayout
    android:id="@+id/more"
    android:layout_alignParentRight="true"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="40dp"/>
    <RelativeLayout
        android:id="@+id/rl_record_parent"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp">

        <TextView
            android:id="@+id/tv_water_record_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/img_menu"
            android:layout_toLeftOf="@id/img_menu"
            android:text="+550ml"
            android:textColor="#252450"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/menu" />
    </RelativeLayout>
</RelativeLayout>

